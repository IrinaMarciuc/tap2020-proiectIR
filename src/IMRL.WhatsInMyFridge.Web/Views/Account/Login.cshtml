@model IMRL.WhatsInMyFridge.Web.Models.Account.RegisterViewModel
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h2><strong>Autentificare </strong></h2><br />
            <form asp-action="login" method="post">
                <div class="text-danger">
                    <ul>
                        @foreach (var error in ViewData.ModelState.SelectMany(_ => _.Value.Errors))
                        {
                            <li>
                                @error.ErrorMessage
                            </li>
                        }
                    </ul>
                </div>

                <div class="form-group">
                    <label>Numele de utilizator</label>
                    <input type="text" class="form-control" id="userName" name="userName" placeholder="Numele De Utilizator">
                </div>
                <div class="form-group">
                    <label>Parola</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Parola">
                </div>
                <div class="form-check">
                    <button class="btn btn-info" type="reset">Reset</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

