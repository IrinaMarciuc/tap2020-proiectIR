
@{
    ViewData["Title"] = "Propune o rețetă";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model IMRL.WhatsInMyFridge.Web.Areas.AddRecipe.Models.AddRecipeViewModel

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <form asp-controller="AddRecipe" asp-action="AddRecipe" asp-area="AddRecipe" method="post">
                <div class="form-group" for="RecipeName">
                    <label for="RecipeName">Numele Rețetei: </label>
                    <input type="text" name="RecipeName" class="form-control" />
                </div>
                <div class="form-group" for="Link">
                    <label for="Link">Link: </label>
                    <input type="text" name="Link" class="form-control" />

                    
                </div>
                <div class="form-group" for="RecipeType">
                    <label for="RecipeType">Tipul Rețetei: </label>
                    <select class="form-control" name="RecipeType">
                        <option value="normal">Fără restricții</option>
                        <option value="vegan">Vegan</option>
                        <option value="vegetarian">Vegetarian</option>
                    </select>
                </div>
                <div class="form-group" >
                    <label for="Ingredients">Ingrediente(maxim 15, altfel nimeni nu se oboseste sa citeasca reteta): </label>
                    <div class="form-group" >
                        <input class="form-control" type="text" name="Ingredients[0]" placeholder="Nume ingredient" />
                        <input class="form-control" type="text" name="Quantities[0]" placeholder="Cantitate" step="0.01" />
                        <select class="form-control" name="UnitsOfMeasurement[0]">
                            <option value="kg">Kg</option>
                            <option value="gr">Grame</option>
                            <option value="lingura">Lingura</option>
                            <option value="lingurita">Lingurita</option>
                            <option value="linguri">Linguri</option>
                            <option value="lingurite">Lingurite</option>
                            <option value="litri">Litri</option>
                            <option value="ml">Mililitri</option>
                            <option value="bc">Bucata</option>
                            <option value="buc">Bucati</option>
                            <option value="praf">Praf</option>
                            <option value="fir">Fir</option>
                            <option value="fire">Fire</option>
                        </select>
                    </div>
                </div>
                <div class="form-group" id="textboxcontainer" style="display:inline;">

                </div>
                <div class="form-group">
                    <input id="AddButton" type="button" class="btn btn-outline-dark" style="background-color:#f388d4" value="Adaugă încă un ingredient" />
                </div>
                <button type="submit" class="btn btn-warning btn-outline-dark">Adăugare rețetă</button>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
            var i = 1;
        $("#AddButton").click(function () {
            var div = $("<div />");
                var value = "";
                var IngredientBox = $("<input />").attr("type", "text").attr("placeholder", "Nume ingredient").attr("name", "Ingredients[" + i + "]").attr("class","form-control");
                var QuantityBox = $("<input />").attr("type", "text").attr("placeholder", "Cantitate").attr("name", "Quantities[" + i + "]").attr("class", "form-control").attr("step","0.01");
            var UoMBox = $("<select />").attr("class", "form-control").attr("name", "UnitsOfMeasurement[" + i + "]");
            var opt1 = document.createElement('option');
            opt1.value = "kg";
            opt1.textContent = "Kg";
            UoMBox.append(opt1);
            var opt2 = document.createElement('option');
            opt2.value = "gr";
            opt2.textContent = "Grame";
            UoMBox.append(opt2);
            var opt3 = document.createElement('option');
            opt3.value = "lingura";
            opt3.textContent = "Lingura";
            UoMBox.append(opt3);
            var opt4 = document.createElement('option');
            opt4.value = "lingurita";
            opt4.textContent = "Lingurita";
            UoMBox.append(opt4);

            var opt5 = document.createElement('option');
            opt5.value = "linguri";
            opt5.textContent = "Linguri";
            UoMBox.append(opt5);
            var opt6 = document.createElement('option');
            opt6.value = "lingurite";
            opt6.textContent = "Lingurite";
            UoMBox.append(opt6);
            var opt7 = document.createElement('option');
            opt7.value = "litri";
            opt7.textContent = "Litri";
            UoMBox.append(opt7);
            var opt8 = document.createElement('option');
            opt8.value = "ml";
            opt8.textContent = "Mililitri";
            UoMBox.append(opt8);
            var opt13 = document.createElement('option');
            opt13.value = "bc";
            opt13.textContent = "Bucata";
            UoMBox.append(opt13);
            var opt12 = document.createElement('option');
            opt12.value = "buc";
            opt12.textContent = "Bucati";
            UoMBox.append(opt12);
            var opt9 = document.createElement('option');
            opt9.value = "praf";
            opt9.textContent = "Praf";
            UoMBox.append(opt9);
            var opt10 = document.createElement('option');
            opt10.value = "fir";
            opt10.textContent = "Fir";
            UoMBox.append(opt10);
            var opt11 = document.createElement('option');
            opt11.value = "fire";
            opt11.textContent = "Fire";
            UoMBox.append(opt11);
          
            //UoMBox.append("<option value=" + kg + ">Kg</option>");
                IngredientBox.val(value);
                QuantityBox.val(value);
                UoMBox.val(value);
                div.append(IngredientBox);
                div.append(QuantityBox);
                div.append(UoMBox);

                $("#textboxcontainer").append(div);
                i++;
            });
        function RemoveTextBox(button) {
            $(button).parent().remove();
        }
    </script>
}