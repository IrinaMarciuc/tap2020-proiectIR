
@{
    ViewData["Title"] = "Adauga reteta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddRecipe</h1>

@model IMRL.WhatsInMyFridge.Web.Areas.AddRecipe.Models.AddRecipeViewModel

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <form asp-controller="AddRecipe" asp-action="AddRecipe" asp-area="AddRecipe" method="post">
                <div class="form-group">
                    <label asp-for="RecipeName">Numele Retetei: </label>
                    <input type="text" asp-for="RecipeName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Link">Link: </label>
                    <input type="text" asp-for="Link" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="RecipeType">Tipul Retetei: </label>
                    <select class="form-control" name="RecipeType">
                        <option value="normal">Normal</option>
                        <option value="vegan">Vegan</option>
                        <option value="vegetarian">Vegetarian</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Ingredients">Ingrediente(maxim 15, altfel nimeni nu se oboseste sa citeasca reteta): </label>
                    <div class="form-group">
                        <input type="text" asp-for="Ingredients[0].Name" placeholder="Nume ingredient" />
                        <input type="number" asp-for="Ingredients[0].Quantity" placeholder="Cantitate" />
                        <input type="text" asp-for="Ingredients[0].UnitOfMeasurement" placeholder="Unitate de masura" />
                    </div>
                </div>
                <div class="form-group">
                    <input id="AddButton" type="button" value="Adauga inca un ingredient" />
                </div>
                <div class="form-group" id="textboxcontainer"></div>
                <button type="submit" class="btn btn-primary">Adaugare reteta</button>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            var i = 1;
            $("#AddButton").onclick(function () {
                var div = $("<div />");
                var value = "";
                var IngredientBox = $("<input />").attr("type", "text").attr("placeholder", "Nume ingredient").attr("asp-for", "Ingredients[" + i + "].Name");
                var QuantityBox = $("<input />").attr("type", "number").attr("placeholder", "Cantitate").attr("asp-for", "Ingredients[" + i + "].Quantity");
                var UoMBox = $("<input />").attr("type", "text").attr("placeholder", "Unitate de masura").attr("asp-for", "Ingredients[" + i + "].UnitOfMeasurement");

                IngredientBox.val(value);
                QuantityBox.val(value);
                UoMBox.val(value);
                div.append(IngredientBox);
                div.append(QuantityBox);
                div.append(UoMBox);

                var button = $("<input />").attr("type", "button").attr("value", "Elimina");
                button.attr("onclick", "RemoveTextBox(this)");
                div.append(button);
                $("#textboxcontainer").append(div);
                i++;

            });

        });
        function RemoveTextBox(button) {
            $(button).parent().remove();
        }
    </script>
}